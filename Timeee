import tkinter as tk
from tkinter import ttk
import webbrowser
import requests
from bs4 import BeautifulSoup

def search_keywords():
    input_sentence = entry.get()
    
    # Perform keyword search
    keyword_matches = df[df['Keyword'].str.contains(input_sentence, case=False, na=False)
    
    if not keyword_matches.empty:
        # Handle found keywords and display the results
        display_results(keyword_matches)
    else:
        # No keyword found, activate Google search button
        google_search_button['state'] = 'normal'

def google_search(query):
    search_url = f"https://www.google.com/search?q={query}"
    
    # Perform the Google search and get the first link
    response = requests.get(search_url)
    if response.status_code == 200:
        soup = BeautifulSoup(response.text, 'html.parser')
        search_results = soup.find_all('a')
        first_link = None
        
        for result in search_results:
            link = result.get('href')
            if link and link.startswith('/url?q='):
                first_link = link.split('/url?q=')[1]
                break
        
        if first_link:
            webbrowser.open(first_link)

# Create the main Tkinter window
root = tk.Tk()
root.title("Keyword Search App")

# Create and configure the search entry field
entry = ttk.Entry(root, width=30)
entry.pack(padx=10, pady=10)

# Create a button to trigger the keyword search
search_button = ttk.Button(root, text="Search", command=search_keywords)
search_button.pack(padx=10, pady=10)

# Create a Google Search button but initially disable it
google_search_button = ttk.Button(root, text="Google Search", command=lambda: google_search(entry.get()))
google_search_button.pack(padx=10, pady=10)
google_search_button['state'] = 'disabled'  # Initially disabled

# ... (rest of your code)

root.mainloop()
